<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.was.controller.RecebimentoActivity">

    <TextView
        android:id="@+id/txtRecebimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="TextView" />



    <Button
        android:id="@+id/btnEnviarEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRecebimento"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Enviar Entrega" />

    <ProgressBar
        android:id="@+id/progressBarHoriz"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/btnEnviarEntrega"
        android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/txtResposta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/progressBarHoriz"
        android:layout_alignStart="@+id/progressBarHoriz"
        android:layout_below="@+id/progressBarHoriz"/>
</RelativeLayout>
